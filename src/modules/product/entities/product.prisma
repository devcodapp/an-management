
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Product {
  id          String             @id @map("_id")
  name        String
  description String
  price       Float
  images   Json[]
  additionals AdditionalsOnProducts[]
  // option   Option[]
  createdUser String
  createdAt   DateTime           @default(now())
  deletedUser String?
  deletedAt   DateTime?
  disabledAt DateTime?
  categoryId  String
  category    CategoryProduct @relation(fields: [categoryId], references: [id])
}

model CategoryProduct {
  id         String       @id @map("_id")
  Product Product[]
}

model Additional {
  id          String             @id @map("_id")
  products     AdditionalsOnProducts[]
}

model AdditionalsOnProducts {
  id          String             @id @map("_id")
  product_id  String
  additional_id String
  additional Additional @relation(fields: [additional_id], references: [id])
  product     Product            @relation(fields: [product_id], references: [id])
}

