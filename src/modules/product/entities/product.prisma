datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String                  @id @map("_id")
  name        String
  description String
  price       Float
  sku         String
  variants    Json[]
  images      Json[]
  createdUser String
  createdAt   DateTime                @default(now())
  deletedUser String?
  deletedAt   DateTime?
  deleted     Boolean                 @default(false)
  disabledAt  DateTime?
  disabled    Boolean                 @default(false)
  categoryId  String
  additionals AdditionalsOnProducts[]
  category    CategoryProduct?        @relation(fields: [categoryId], references: [id])
}

model CategoryProduct {
  id      String    @id @map("_id")
  product Product[]
}

model Additional {
  id       String                  @id @map("_id")
  products AdditionalsOnProducts[]
}

model AdditionalsOnProducts {
  id           String      @id @map("_id")
  additional   Additional? @relation(fields: [additionalId], references: [id])
  additionalId String?
  product      Product?    @relation(fields: [productId], references: [id])
  productId    String?
}

