model Worker {
  id          String    @id @map("_id")
  name        String
  email String
  password       String
  role String
  imageId     String
  imageUrl    String
  createdWorker String
  createdAt   DateTime  @default(now())
  deletedWorker String?
  deletedAt   DateTime?

  Company   Company @relation(fields: [companyId], references: [id])
  companyId String
}

model Company {
  id              String            @id @map("_id")
  Worker Worker[]
}
