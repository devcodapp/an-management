datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Option {
  id           String    @id @map("_id")
  name         String
  description  String
  defaultPrice Float?
  suboptions   Json[]
  restaurantId    String
  createdUser  String
  createdAt    DateTime  @default(now())
  deletedUser  String?
  deletedAt    DateTime?
  deleted      Boolean   @default(false)

  disabledAt DateTime?
  disabled   Boolean   @default(false)

  restaurant Restaurant @relation(fields: [restaurantId], references: [id])
}

model Restaurant {
  id      String   @id @map("_id")
  options Option[] // One-to-many relationship with the Option model
}
