datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Option {
  id           String    @id @map("_id")
  name         String
  description  String
  defaultPrice Float?
  suboptions   Json[]
  companyId    String
  createdWorker  String
  createdAt    DateTime  @default(now())
  deletedWorker  String?
  deletedAt    DateTime?
  disabledAt   DateTime?
  company      Company   @relation(fields: [companyId], references: [id])
}

model Company {
  id      String   @id @map("_id")
  options Option[] // One-to-many relationship with the Option model
}
