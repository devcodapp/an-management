datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id          String   @id @map("_id")
  slug        String   @unique
  name        String
  description String
  tags        String[]
  type        String

  address     Json?
  phoneNumber String?

  isOpened     Boolean @default(false)
  openingHours Json[]

  imageId  String?
  imageUrl String?

  bannerId  String?
  bannerUrl String?

  owner Owner @relation(fields: [ownerId], references: [id])

  createdAt  DateTime  @default(now())
  disabledAt DateTime?
  disabled   Boolean   @default(false)
  ownerId    String

  @@map("restaurants")
}

model Owner {
  id         String       @id @map("_id")
  Restaurant Restaurant[]
}
