model User {
  id       String @id @map("_id")
  username String
  email    String
  password String

  changePassword Boolean @default(true)

  deletedAt DateTime?

  restaurant   Restaurant? @relation("USERS", fields: [restaurantId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  restaurantId String?

  Restaurant Restaurant[] @relation("OWNER")
}

model Restaurant {
  id String @id @map("_id")

  ownerId String
  owner   User   @relation("OWNER", fields: [ownerId], references: [id])

  users User[] @relation("USERS")
}
